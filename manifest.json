{
  "manifest_version": 3,
  "name": "ZIPboost â€” Zip Archiver & Viewer",
  "version": "2.3.1",
  "description": "Drag & drop to compress, view, and extract ZIP files directly in Chrome. Local signup & login in the popup.",
  "action": {
    "default_title": "Open ZIPboost",
    "default_popup": "views/app.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["downloads", "storage", "unlimitedStorage"],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
}

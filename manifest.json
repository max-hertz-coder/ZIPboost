{
  "manifest_version": 3,
  "name": "ZIPboost â€” Zip Archiver & Viewer",
  "version": "1.1.0",
  "description": "Drag & drop files to compress into ZIP or preview contents of ZIP archives (PDF, DOCX, PNG, TXT, etc.) directly in Chrome.",
  "action": {
    "default_title": "Open ZIPboost",
    "default_popup": "app.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": [
    "storage",
    "downloads"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "options_page": "app.html"
}

{
  "manifest_version": 3,
  "name": "ZIPboost â€” Zip Archiver & Viewer",
  "version": "2.3.0",
  "description": "Drag & drop files to compress into ZIP and preview/extract ZIP contents (PDF, images, text, DOCX*) directly in Chrome. Auth is local in the extension.",
  "action": {
    "default_title": "Open ZIPboost",
    "default_popup": "views/app.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "downloads",
    "storage",
    "unlimitedStorage"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "icons/*"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}

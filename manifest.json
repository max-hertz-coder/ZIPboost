{
  "manifest_version": 3,
  "name": "ZIPboost â€” Zip Archiver & Viewer",
  "version": "1.4.0",
  "description": "Drag & drop files to compress into ZIP and preview/extract ZIP contents (PDF, images, text, DOCX*) directly in Chrome.",
  "action": {
    "default_title": "Open ZIPboost",
    "default_popup": "views/app.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "downloads"],
  "host_permissions": ["<all_urls>"],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}
